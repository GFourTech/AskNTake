<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/room_sharing_la_available_from"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <EditText
            android:id="@+id/edit_room_sharing_available_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Available From"
            android:inputType="date" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/room_sharing_la_accommodates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <EditText
            android:id="@+id/edit_room_sharing_accommodates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Accommodates"
            android:inputType="number" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/room_sharing_la_bed_rooms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <EditText
            android:id="@+id/edit_room_sharing_bedrooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bedrooms"
            android:inputType="number" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/room_sharing_la_bath_rooms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <EditText
            android:id="@+id/edit_room_sharing_bath_rooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bath Rooms"
            android:inputType="numberDecimal" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:id="@+id/Linear_layout_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/text_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Prefered Gender :" />

        <Spinner
            android:id="@+id/room_sharing_gender_spin"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:entries="@array/gender">

        </Spinner>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/room_sharing_la_asking_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:visibility="visible">

            <EditText
                android:id="@+id/edit_room_sharing_asking_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Asking Price"
                android:inputType="textAutoComplete" />
        </android.support.design.widget.TextInputLayout>

        <Spinner
            android:id="@+id/room_sharing_price_type_spinner"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:entries="@array/doller_names" />
    </LinearLayout>


</LinearLayout>