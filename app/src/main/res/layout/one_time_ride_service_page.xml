<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/one_time_la_travel_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <EditText
            android:id="@+id/edit_one_time_travel_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Travel Date"
            android:inputType="date" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:id="@+id/linear_lay_destination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/one_time_la_destination_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_one_time_destination_from"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:hint="Destination From"
                android:inputType="textAutoComplete" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:text="To" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/one_time_la_destination_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_one_time_destination_to"
                android:layout_width="1500dp"
                android:layout_height="wrap_content"
                android:hint="Destination To"
                android:inputType="textAutoComplete" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_lay_time_travelling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/one_time_la_travel_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_one_time_travel_time"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:hint="Time of leaving"
                android:inputType="time" />
        </android.support.design.widget.TextInputLayout>

        <Spinner
            android:id="@+id/one_time_spinner_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="15dp"
            android:entries="@array/time_am_pm">

        </Spinner>

    </LinearLayout>


