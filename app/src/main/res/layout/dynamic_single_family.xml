<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/available_from_dyn_single_fam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Available From: "
            android:textSize="18sp" />


        <TextView
            android:id="@+id/available_from_dyn_single_fam_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="value"
            android:textSize="18sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/edit_single_family_bedrooms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Bedrooms: "
            android:textSize="18sp" />


        <TextView
            android:id="@+id/edit_single_family_bedrooms_vlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="value"
            android:textSize="18sp"
            android:typeface="monospace" />


    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/single_fam_bath_rooms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Bathrooms: "
        android:textSize="18sp" />


    <TextView
        android:id="@+id/single_fam_bath_rooms_vlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="value"
        android:textSize="18sp"
        android:typeface="monospace" />


</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/single_fam_total_sq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Total Sq: "
            android:textSize="18sp" />


        <TextView
            android:id="@+id/single_fam_total_sq_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="value"
            android:textSize="18sp"
            android:typeface="monospace" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/single_fam_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Asking Price: "
            android:textSize="18sp" />


        <TextView
            android:id="@+id/single_fam_price_text_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="value"
            android:textSize="18sp"
            android:typeface="monospace" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/single_fam_price_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Price Type: "
            android:textSize="18sp" />


        <TextView
            android:id="@+id/single_fam_price_type_text_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="value"
            android:textSize="18sp"
            android:typeface="monospace" />


    </LinearLayout>

</LinearLayout>