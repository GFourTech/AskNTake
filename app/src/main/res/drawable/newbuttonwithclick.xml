<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="90"
                android:endColor="#ce465b"
                android:startColor="@color/colorAccent" />
            <stroke
                android:width="0dp"
                    android:color="#cccccc" />
            <corners
                android:radius="7dp" />
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#ce465b"
                android:startColor="@color/colorAccent" />
            <stroke
                android:width="0dp"
                android:color="#cccccc" />
            <corners
                android:radius="7dp" />
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#ce465b"
                android:startColor="@color/colorAccent" />
           <stroke
                 android:width="0dp"
                 android:color="#cccccc" />
            <corners
                android:radius="7dp" />
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
        </shape>
    </item>
</selector>